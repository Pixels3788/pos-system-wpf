<UserControl x:Class="PointOfSaleSystem.Views.LoginScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSaleSystem.Views"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ui:Card Grid.Row="1" Grid.Column="1" Padding="20" MaxWidth="400">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding PinInput}" 
                   FontSize="36" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center"
                   MinWidth="180"
                   Height="50"
                   Padding="10"
                   Margin="0,0,0,15"
                   />

                <TextBlock Text="{Binding LoginMessage}" 
               
               FontSize="16"
               HorizontalAlignment="Center"
               TextAlignment="Center"
               Margin="0,0,0,15"/>

                <!-- Keypad -->
                <UniformGrid Rows="4" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Margin="0,0,0,0">
                    <!-- Row 1 -->
                    <ui:Button Content="1" Command="{Binding EnterDigitCommand}" CommandParameter="1" Margin="5"/>
                    <ui:Button Content="2" Command="{Binding EnterDigitCommand}" CommandParameter="2" Margin="5"/>
                    <ui:Button Content="3" Command="{Binding EnterDigitCommand}" CommandParameter="3" Margin="5"/>
                    <!-- Row 2 -->
                    <ui:Button Content="4" Command="{Binding EnterDigitCommand}" CommandParameter="4" Margin="5"/>
                    <ui:Button Content="5" Command="{Binding EnterDigitCommand}" CommandParameter="5" Margin="5"/>
                    <ui:Button Content="6" Command="{Binding EnterDigitCommand}" CommandParameter="6" Margin="5"/>
                    <!-- Row 3 -->
                    <ui:Button Content="7" Command="{Binding EnterDigitCommand}" CommandParameter="7" Margin="5"/>
                    <ui:Button Content="8" Command="{Binding EnterDigitCommand}" CommandParameter="8" Margin="5"/>
                    <ui:Button Content="9" Command="{Binding EnterDigitCommand}" CommandParameter="9" Margin="5"/>
                    <!-- Row 4 -->
                    <ui:Button Content="Del" Command="{Binding DeleteDigitCommand}" Margin="5"/>
                    <ui:Button Content="0" Command="{Binding EnterDigitCommand}" CommandParameter="0" Margin="5"/>
                    <ui:Button Content="Enter" Command="{Binding AttemptLoginCommand}" Margin="5"/>
                </UniformGrid>
            </StackPanel>
        </ui:Card>
        <Button Command="{Binding OpenCreationMenuCommand}" Content="Create A New User" VerticalAlignment="Top" Width="292" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center"/>

    </Grid>
</UserControl>
