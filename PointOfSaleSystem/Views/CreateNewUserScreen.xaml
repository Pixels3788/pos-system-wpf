<UserControl x:Class="PointOfSaleSystem.Views.CreateNewUserScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSaleSystem.Views"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#F4F6F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <ui:Card Grid.Column="1" Padding="30" Background="White" MaxWidth="600" MinWidth="400">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                
                <TextBlock Text="Create New User"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                
                <TextBlock Text="{Binding CreationMessage}"
                           FontSize="16"
                           Foreground="#E74C3C"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                
                <ui:TextBox Text="{Binding FirstName}" PlaceholderText="First Name" 
                            Margin="0,0,0,15" MinHeight="40" MinWidth="500" HorizontalAlignment="Stretch"
                            Background="#ECF0F1" Foreground="#2C3E50" Padding="10"/>
                <ui:TextBox Text="{Binding LastName}" PlaceholderText="Last Name" 
                            Margin="0,0,0,15" MinHeight="40" MinWidth="500" HorizontalAlignment="Stretch"
                            Background="#ECF0F1" Foreground="#2C3E50" Padding="10"/>
                <ui:TextBox Text="{Binding UserEmail}" PlaceholderText="Email" 
                            Margin="0,0,0,15" MinHeight="40" MinWidth="500" HorizontalAlignment="Stretch"
                            Background="#ECF0F1" Foreground="#2C3E50" Padding="10"/>
                <ui:TextBox Text="{Binding UserPin}" PlaceholderText="Pin" 
                            Margin="0,0,0,20" MinHeight="40" MinWidth="500" HorizontalAlignment="Stretch"
                            Background="#ECF0F1" Foreground="#2C3E50" Padding="10"/>

                
                <ui:Button Content="Create User" Command="{Binding CreateUserCommand}" FontSize="20"
                           Margin="0,0,0,15" MinHeight="45" MinWidth="500" HorizontalAlignment="Stretch"
                           Background="#4A90E2" Foreground="White" FontWeight="SemiBold"/>
                <ui:Button Content="Back To Login Screen" Command="{Binding NavigateToLoginCommand}" FontSize="20"
                           Margin="0,0,0,15" MinHeight="45" MinWidth="500" HorizontalAlignment="Stretch"
                           Background="#27AE60" Foreground="White" FontWeight="SemiBold"/>

            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
