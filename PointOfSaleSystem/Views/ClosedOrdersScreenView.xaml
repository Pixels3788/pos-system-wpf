<UserControl x:Class="PointOfSaleSystem.Views.ClosedOrdersScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSaleSystem.Views"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid Background="White" Margin="15">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        
        <Border Grid.Column="0"
                Margin="5"
                Padding="15"
                Background="#FFF5F5F5"
                CornerRadius="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <TextBlock Text="Closed Orders"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                
                <ListView Grid.Row="1"
                          ItemsSource="{Binding ClosedOrders}"
                          SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                          HorizontalContentAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order #"
                                            DisplayMemberBinding="{Binding OrderId}"
                                            Width="100"/>
                            <GridViewColumn Header="Created"
                                            DisplayMemberBinding="{Binding CreatedAt}"
                                            Width="150"/>
                            <GridViewColumn Header="Closed"
                                            DisplayMemberBinding="{Binding FinalizedAt}"
                                            Width="150"/>
                            <GridViewColumn Header="Total"
                                            DisplayMemberBinding="{Binding OrderTotal, StringFormat=C}"
                                            Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                
                <ui:Button Grid.Row="2"
                           Content="← Back to Open Orders"
                           Height="45"
                           Margin="0,15,0,0"
                           Command="{Binding NavigateToOpenOrdersCommand}" />
            </Grid>
        </Border>


        
        <Border Grid.Column="1"
                Margin="5"
                Padding="15"
                Background="#FFF5F5F5"
                CornerRadius="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,15">
                    <TextBlock Text="Order #"
                               FontSize="22"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.OrderId}"
                               FontSize="22"
                               Margin="10,0,0,0"/>
                </StackPanel>

                
                <ListView Grid.Row="1"
                          ItemsSource="{Binding SelectedOrder.LineOrder}"
                          HorizontalContentAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Item"
                                            DisplayMemberBinding="{Binding NameAtSale}"
                                            Width="200"/>
                            <GridViewColumn Header="Unit Price"
                                            DisplayMemberBinding="{Binding UnitPrice, StringFormat=C}"
                                            Width="120"/>
                            <GridViewColumn Header="Qty"
                                            DisplayMemberBinding="{Binding Quantity}"
                                            Width="80"/>
                            <GridViewColumn Header="Line Total"
                                            DisplayMemberBinding="{Binding LineTotal, StringFormat=C}"
                                            Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,15,0,10">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Created:"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedOrder.CreatedAt}"/>

                            <TextBlock Text="Closed:"
                                       FontWeight="Bold"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="{Binding SelectedOrder.FinalizedAt}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding SelectedOrder.TotalAfterTax, StringFormat=C}"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                
                <Border Grid.Row="3"
                        Background="White"
                        CornerRadius="8"
                        Padding="15">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Today's Earnings"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding TodaysEarnings, StringFormat=C}"
                                       FontSize="20"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Lifetime Earnings"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding LifeTimeEarnings, StringFormat=C}"
                                       FontSize="20"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>
        </Border>

    </Grid>
</UserControl>
