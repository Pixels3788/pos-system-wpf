<UserControl x:Class="PointOfSaleSystem.Views.LogsScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSaleSystem.Views"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="900" 
             d:DesignWidth="1600">
    <Grid Margin="30">

        <!-- White container covering header + content -->
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="System Logs"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#202020"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Logs Container -->
                <Border Grid.Row="1"
                        Background="#FAFAFA"
                        CornerRadius="8"
                        Padding="15"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Logs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10"
                                            Padding="12"
                                            Background="White"
                                            CornerRadius="6"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">

                                        <StackPanel>
                                            <TextBlock Text="{Binding Action}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#333333"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="14"
                                                       Foreground="#555555"
                                                       TextWrapping="Wrap"
                                                       Margin="0,3,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:G}'}"
                                                           FontSize="14"
                                                           Foreground="#666666"/>
                                                <TextBlock Text="  |  " FontSize="14" Foreground="#666666"/>
                                                <TextBlock 
                                                           Text="{Binding UserId, StringFormat='User ID: {0}'}" 
                                                           FontSize="14"
                                                           Foreground="#666666"/>
                                            </StackPanel>
                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Back Button -->
                <ui:Button Grid.Row="2"
                           Content="← Back to Manager Panel"
                           FontSize="18"
                           Height="55"
                           HorizontalAlignment="Stretch"
                           Command="{Binding NavigateBackCommand}"
                           Margin="0,15,0,0"/>
            </Grid>

        </Border>

    </Grid>

</UserControl>
