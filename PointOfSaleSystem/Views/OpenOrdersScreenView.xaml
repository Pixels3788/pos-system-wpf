<UserControl x:Class="PointOfSaleSystem.Views.OpenOrdersScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSaleSystem.Views"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid Background="White" Margin="10">

        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            
            <ColumnDefinition Width="3*"/>
            
        </Grid.ColumnDefinitions>

        
        <Border Margin="5" Padding="10" Background="#FFF0F0F0" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Open Orders" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

                <ListView Grid.Row="1"
                          ItemsSource="{Binding OpenOrders}"
                          SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          FontSize="16">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order #" DisplayMemberBinding="{Binding OrderId}" Width="Auto"/>
                            <GridViewColumn Header="Created" DisplayMemberBinding="{Binding CreatedAt}" Width="Auto"/>
                            <GridViewColumn Header="Total" DisplayMemberBinding="{Binding OrderTotal, StringFormat=C}" Width="Auto"/>
                            <GridViewColumn Header="Total After Tax" DisplayMemberBinding="{Binding TotalAfterTax, StringFormat=C}" Width="Auto"/>
                        </GridView>
                    </ListView.View>

                </ListView>
            </Grid>
        </Border>

        
        <Border Grid.Column="1" Margin="5" Padding="10" Background="#FFF0F0F0" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    
                    <RowDefinition Height="*"/>
                    
                    <RowDefinition Height="Auto"/>
                    
                    <RowDefinition Height="Auto"/>
                    
                </Grid.RowDefinitions>

                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Order #" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.OrderId}" FontSize="20" Margin="10,0,0,0"/>
                </StackPanel>

                
                <ListView Grid.Row="1"
                          ItemsSource="{Binding SelectedOrder.LineOrder}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          FontSize="16"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Item" DisplayMemberBinding="{Binding NameAtSale}" Width="Auto"/>
                            <GridViewColumn Header="Unit Price" DisplayMemberBinding="{Binding UnitPrice}" Width="Auto"/>
                            <GridViewColumn Header="Qty" DisplayMemberBinding="{Binding Quantity}" Width="Auto"/>
                            <GridViewColumn Header="Line Total" DisplayMemberBinding="{Binding LineTotal}" Width="Auto"/>
                        </GridView>
                    </ListView.View>
                </ListView>


                <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        
                        <TextBlock Text="Order Total:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOrder.OrderTotal, StringFormat=C}" FontSize="22" FontWeight="Bold"/>

                        
                        <TextBlock Text="Total After Tax:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedOrder.TotalAfterTax, StringFormat=C}" FontSize="22" FontWeight="Bold"/>

                        
                        <TextBlock Text="Change Due:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ChangeDue, StringFormat=C}" FontSize="22" FontWeight="Bold"/>

                    </Grid>
                </Border>


                <Border Grid.Row="3" Background="White" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="Cash Received:" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox Width="120" Margin="10,0,0,0" FontSize="16"
                                     Text="{Binding CashReceived, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                            <ui:Button Command="{Binding EditOrderCommand}"
                                       MinWidth="150" MinHeight="40"
                                       Margin="5"
                                       Content="Edit Order"
                                       IsEnabled="{Binding IsOrderSelected}"/>
                            <ui:Button Content="Finalize Order" 
                                       MinWidth="150" MinHeight="40" 
                                       Margin="5"
                                       Command="{Binding FinalizeOrderCommand}" 
                                       IsEnabled="{Binding IsOrderSelected}"/>
                            <ui:Button Content="Cancel Order" 
                                       Width="150" Height="40" 
                                       Margin="5"
                                       Command="{Binding CancelOrderCommand}"
                                       IsEnabled="{Binding IsOrderSelected}"/>
                            <ui:Button Content="View Finalized Orders"
                                       MinWidth="150" MinHeight="40"
                                       Margin="5"
                                       Command="{Binding NavigateToFinalizedOrdersCommand}" />
                            <ui:Button Content="Back To Order Screen"
                                       MinWidth="150" MinHeight="40"
                                       Margin="5"
                                       Command="{Binding NavigateToOrderScreenCommand}" />

                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
