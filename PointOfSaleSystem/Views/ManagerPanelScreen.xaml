<UserControl x:Class="PointOfSaleSystem.Views.ManagerPanelScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSaleSystem.Views"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#F5F5F5">

    <Grid Margin="10">

        <!-- Header -->
        <TextBlock Text="Manager Panel"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"
                   Foreground="#2C3E50"/>

        <!-- Main Button Grid -->
        <Grid Margin="0,80,0,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->

            <Border Grid.Row="0" Grid.Column="0"
                    Margin="15"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <ui:Button Content="Inventory Editor"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Background="#4A90E2"
                           Foreground="White"
                           Command="{Binding NavigateToInventoryEditorCommand}"
                           Height="120"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1"
                    Margin="15"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <ui:Button Content="Add / Edit Menu Items"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Background="#4A90E2"
                           Foreground="White"
                           Command="{Binding NavigateToMenuEditorCommand}"
                           Height="120"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2"
                    Margin="15"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <ui:Button Content="User Information Editor"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Background="#4A90E2"
                           Foreground="White"
                           Command="{Binding NavigateToUserEditorCommand}"
                           Height="120"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
            </Border>

            <!-- Row 1 - System Logs -->

            <Border Grid.Row="1" Grid.Column="1"
                    Margin="15"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <ui:Button Content="System Logs"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Background="#4A90E2"
                           Foreground="White"
                           Command="{Binding NavigateToLogsCommand}"
                           Height="120"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
            </Border>

            <!-- Row 2 - Back -->

            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                    Margin="15"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <ui:Button Content="← Back"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Background="#E74C3C"
                           Foreground="White"
                           Command="{Binding NavigateBackCommand}"
                           Height="120"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
            </Border>

        </Grid>
    </Grid>
</UserControl>
